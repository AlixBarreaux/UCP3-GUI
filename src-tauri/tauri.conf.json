{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run vite-build",
    "beforeDevCommand": "npm run vite-dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "UCP3-GUI",
    "version": "0.0.14"
  },
  "tauri": {
    "allowlist": {
      "os": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$DATA/*",
          "$DOWNLOAD/*",
          "$LOCALDATA/*",
          "$APP/*"
        ]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "window": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": [
          "https://api.github.com/repos/UnofficialCrusaderPatch/**"
        ]
      },
      "shell": {
        "open": true
      },
      "protocol": {
        "asset": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "ucp.gui.tauri",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": {
        "default-src": "'self'",
        "img-src": "'self' data: asset: https://asset.localhost",
        "script-src": "'self' 'unsafe-inline'",
        "style-src": "'self' 'unsafe-inline'"
      },
      "dangerousDisableAssetCspModification": [
        "script-src"
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/UnofficialCrusaderPatch/UCP3-GUI/releases/download/latest/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc5OUQwNEU2QjcxMUVFMTMKUldRVDdoRzM1Z1NkZVN3V2h2cXcwOTh6c1pTZFROS3BwM2UzM2lMTGFQajU3RzdLZ1gzc2RWS0kK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 768,
        "minHeight": 630,
        "resizable": true,
        "title": "Unofficial Crusader Patch 3 - GUI",
        "width": 1024,
        "minWidth": 800,
        "decorations": false
      }
    ]
  }
}