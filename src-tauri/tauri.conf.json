{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run vite-build",
    "beforeDevCommand": "npm run vite-dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "UCP3-GUI"
  },
  "tauri": {
    "allowlist": {
      "os": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$TEMP/**/*",
          "$DATA/**/*",
          "$DOWNLOAD/*",
          "$LOCALDATA/**/*",
          "$APP/**/*",
          "$RESOURCE/gameinfo/**/*.yaml",
          "$RESOURCE/lang/**/*.yaml",
          "$RESOURCE/lang/sources/**/*.yaml",
          "$RESOURCE/backgrounds/*"
        ]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "window": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": [
          "https://api.github.com/repos/UnofficialCrusaderPatch/**/*",
          "https://github.com/UnofficialCrusaderPatch/**/*",
          "https://gist.githubusercontent.com/ucp3-machine/**/*"
        ]
      },
      "shell": {
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "$RESOURCE/backgrounds/*"
        ]
      },
      "process": {
        "relaunch": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": {
        "../resources/": "."
      },
      "identifier": "ucp.gui.tauri",
      "publisher": "ucp-team",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "shortDescription": "",
      "targets": [
        "nsis",
        "updater"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "nsis": {
          "installMode": "currentUser",
          "displayLanguageSelector": true,
          "languages": [
            "English"
          ],
          "license": "../LICENSE",
          "headerImage": "../installer/headerImage.bmp",
          "sidebarImage": "../installer/sidebarImage.bmp",
          "installerIcon": "../installer/ucp3.ico"
        }
      }
    },
    "security": {
      "csp": {
        "default-src": "'self'",
        "img-src": "'self' data: asset: https://asset.localhost https://raw.githubusercontent.com https://discordapp.com/api/guilds/426318193603117057/widget.png",
        "script-src": "'self' 'unsafe-inline'",
        "style-src": "'self' 'unsafe-inline'"
      },
      "dangerousDisableAssetCspModification": [
        "script-src"
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/ucp3-machine/2a179c892f49448c85dfcc9e5f9a3c6b/raw/"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc5OUQwNEU2QjcxMUVFMTMKUldRVDdoRzM1Z1NkZVN3V2h2cXcwOTh6c1pTZFROS3BwM2UzM2lMTGFQajU3RzdLZ1gzc2RWS0kK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 768,
        "minHeight": 630,
        "resizable": true,
        "title": "Unofficial Crusader Patch 3 - GUI",
        "width": 1024,
        "minWidth": 800,
        "decorations": false
      }
    ]
  }
}